{% extends "articulosBundle::/Plantillas/base.html.twig" %}

{% block stylesheets %}
    {% include "articulosBundle::/Plantillas/stylesheets.html.twig" %}
{% endblock stylesheets %}

{% block body %}

    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'navbar-form'} }) }}
        {{ form_widget(form.product, { 'attr': {'class': 'input-group','placeholder':'Producto' } }) }}
        {{ form_rest(form) }}
        <input type="submit" class="btn btn-default" value="Buscar"/>
        {{ form_end(form) }}

        {% for flashMessage in app.session.flashbag.get('NoExiste') %}
            <div class="alert alert-warning">{{ flashMessage }}</div>
        {% endfor %}
    </div>

{% endblock body %}